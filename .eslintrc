{
    "env": {
        "commonjs": true,
        "node": true,
        "es2017": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "rules": {
        "arrow-spacing": [
            "warn",
            {
                "after": true,
                "before": true
            }
        ],
        "strict": "error",
        "block-spacing": "warn",
        "brace-style": [
            "warn",
            "1tbs"
        ],
        "camelcase": "warn",
        "comma-spacing": [
            "warn",
            {
                "after": true,
                "before": false
            }
        ],
        "comma-style": [
            "warn",
            "last"
        ],
        "eol-last": "error",
        "func-call-spacing": "warn",
        "keyword-spacing": [
            "error",
            {
                "after": true,
                "before": true
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 120
            }
        ],
        "prefer-const": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": "warn",
        "semi-style": [
            "error",
            "last"
        ],
        "space-before-blocks": "warn",
        "spaced-comment": [
            "warn",
            "always"
        ],
        "no-trailing-spaces": "warn",
        "no-multi-spaces": "warn",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "no-useless-concat": "error",
        "indent": ["warn", 4, {
            "CallExpression": {
                "arguments": 1
            },
            "VariableDeclarator": "off",
            "outerIIFEBody": "off",
            "MemberExpression": "off",
            "FunctionDeclaration": {
                "parameters": "off"
            },
            "FunctionExpression": {
                "parameters": "off"
            },
            "ArrayExpression": "off",
            "ObjectExpression": "off",
            "ImportDeclaration": "off",
            "ignoredNodes": [
                "SwitchCase",
                "FunctionDeclaration > BlockStatement.body",
                "FunctionExpression > BlockStatement.body"
            ]
        }],
        "space-in-parens": "error",
        "curly": "error",
        "@typescript-eslint/no-duplicate-enum-values": "off"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "overrides": [
        {
            "files": ["test/**"],
            "env": {
                "mocha": true,
                "es2020": true
            },
            "plugins": [
                "mocha"
            ],
            "extends": [
                "plugin:mocha/recommended"
            ],
            "rules": {
                "mocha/no-skipped-tests": "off",
                "mocha/no-hooks-for-single-case": "off",
                "mocha/no-setup-in-describe": "off",
                "camelcase": "off",
                "max-len": ["warn", 130],
                "mocha/prefer-arrow-callback": ["error", {
                    "allowNamedFunctions": true
                }],
                "padded-blocks": ["error", "never"],
                "@typescript-eslint/no-unused-vars": "off",
                "@typescript-eslint/no-var-requires": "off"
            },
            "parserOptions": {
                "ecmaVersion": 11,
                "sourceType": "commonjs"
            }
        },
        {
            "files": ["code_samples/**/*"],
            "env": {
                "es2020": true
            },
            "parserOptions": {
                "ecmaVersion": 11
            }
        },
        {
            "files": ["scripts/**", "benchmark/**"],
            "parserOptions": {
                "sourceType": "commonjs"
            },
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        },
        {
            "files": ["code_samples/**/*"],
            "env": {
                "es2020": true
            },
            "parserOptions": {
                "ecmaVersion": 11,
                "sourceType": "commonjs"
            },
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        }
    ]
}
