{
    "$schema": "http://json-schema.org/schema#",
    "title": "Hazelcast Node.js Client Configuration",
    "type": "object",
    "definitions": {
        "propertiesObject": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[^ ]*$"
            },
            "additionalProperties": {
                "type": [
                    "number",
                    "string",
                    "boolean"
                ]
            }
        },
        "positiveInteger": {
            "type": "number",
            "minimum": 0,
            "multipleOf": 1
        }
    },
    "properties": {
        "clusterName": {
            "type": [
                "string",
                "null"
            ]
        },
        "instanceName": {
            "type": [
                "string",
                "null"
            ]
        },
        "properties": {
            "$ref": "#/definitions/propertiesObject"
        },
        "clientLabels": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "network": {
            "type": "object",
            "properties": {
                "clusterMembers": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "redoOperation": {
                    "type": "boolean",
                    "default": false
                },
                "smartRouting": {
                    "type": "boolean",
                    "default": true
                },
                "connectionTimeout": {
                    "type": "number",
                    "minimum": 1000,
                    "default": 5000
                },
                "hazelcastCloud": {
                    "type": "object",
                    "properties": {
                        "discoveryToken": {
                            "type": [
                                "string",
                                "null"
                            ]
                        }
                    }
                },
                "ssl": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": false
                        },
                        "sslOptions": {
                            "anyOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "properties": {
                                            "$ref": "#/definitions/propertiesObject"
                                        }
                                    }
                                },
                                {
                                    "type": "null"
                                }
                            ]
                        },
                        "sslOptionsFactoryProperties": {
                            "$ref": "#/definitions/propertiesObject"
                        }
                    }
                }
            }
        },
        "backupAckToClientEnabled": {
            "type": "boolean",
            "default": true
        },
        "connectionStrategy": {
            "type": "object",
            "properties": {
                "asyncStart": {
                    "type": "boolean",
                    "default": false
                },
                "reconnectMode": {
                    "enum": [
                        "on",
                        "off",
                        "async"
                    ]
                },
                "connectionRetry": {
                    "type": "object",
                    "properties": {
                        "initialBackoffMillis": {
                            "type": "number",
                            "minimum": 0
                        },
                        "maxBackoffMillis": {
                            "type": "number",
                            "minimum": 0
                        },
                        "multiplier": {
                            "type": "number",
                            "minimum": 1
                        },
                        "clusterConnectTimeoutMillis": {
                            "type": "number"
                        },
                        "jitter": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        }
                    }
                }
            }
        },
        "serialization": {
            "type": "object",
            "properties": {
                "defaultNumberType": {
                    "enum": [
                        "double",
                        "short",
                        "integer",
                        "float",
                        "byte",
                        "long"
                    ],
                    "default": "double"
                },
                "jsonStringDeserializationPolicy": {
                    "enum": [
                        "eager",
                        "no_deserialization"
                    ],
                    "default": "eager"
                },
                "isBigEndian": {
                    "type": "boolean",
                    "default": false
                },
                "portableVersion": {
                    "$ref": "#/definitions/positiveInteger"
                }
            }
        },
        "nearCaches": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "object",
                    "properties": {
                        "invalidateOnChange": {
                            "type": "boolean",
                            "default": true
                        },
                        "maxIdleSeconds": {
                            "type": "number",
                            "default": 0,
                            "minimum": 0
                        },
                        "inMemoryFormat": {
                            "enum": [
                                "object",
                                "binary"
                            ],
                            "default": "binary"
                        },
                        "timeToLiveSeconds": {
                            "type": "number",
                            "minimum": 0,
                            "default": 0
                        },
                        "evictionPolicy": {
                            "enum": [
                                "none",
                                "lru",
                                "lfu",
                                "random"
                            ],
                            "default": "none"
                        },
                        "evictionMaxSize": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": "maximum safe integer"
                        },
                        "evictionSamplingCount": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": 8
                        },
                        "evictionSamplingPoolSize": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": 16
                        }
                    }
                }
            }
        },
        "reliableTopics": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "object",
                    "properties": {
                        "readBatchSize": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": 25
                        },
                        "overloadPolicy": {
                            "enum": [
                                "discard_oldest",
                                "discard_newest",
                                "block",
                                "error"
                            ],
                            "default": "block"
                        }
                    }
                }
            }
        },
        "flakeIdGenerators": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "object",
                    "properties": {
                        "prefetchCount": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": 100
                        },
                        "prefetchValidityMillis": {
                            "$ref": "#/definitions/positiveInteger",
                            "default": 600000
                        }
                    }
                }
            }
        },
        "loadBalancer": {
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "round_robin",
                        "random"
                    ]
                }
            }
        }
    }
}
