{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "target": "es2018",
        "outDir": "lib",
        "preserveConstEnums": true,
        "lib": [
            "es2018",
            "es2020.bigint"
        ],
        "removeComments": false,
        "sourceMap": true,
        "stripInternal": true
    },
    "include": [
        "src/index.ts"
    ]
}
